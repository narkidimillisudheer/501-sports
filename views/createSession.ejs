<div class="create-session">
    <h2>Create a New Sport Session</h2>
    <form action="/create-session" method="post">
      <label for="sport">Select Sport:</label>
      <select name="sport" id="sport">
        <option value="football">Football</option>
        <option value="basketball">Basketball</option>
        <option value="cricket">Cricket</option>
        <option value="Tennis">Tennis</option>
        <option value="Badminton">Badminton</option>
        <!-- Add more options for other sports -->
      </select>
  
      <label for="team1">Team 1 Players (comma-separated):</label>
      <input type="text" name="team1" id="team1" required>
  
      <label for="team2">Team 2 Players (comma-separated):</label>
      <input type="text" name="team2" id="team2" required>
  
      <label for="additionalPlayers">Additional Players Needed:</label>
      <input type="number" name="additionalPlayers" id="additionalPlayers" required>
  
      <label for="date">Date:</label>
      <input type="date" name="date" id="date" required>
  
      <label for="time">Time:</label>
      <input type="time" name="time" id="time" required>
  
      <label for="venue">Venue:</label>
      <input type="text" name="venue" id="venue" required>
  
      <button type="submit">Create Session</button>
    </form>
  </div>
  
